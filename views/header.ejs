<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src="js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/kindeditor/kindeditor-min.js"></script>
    <script type="text/javascript" src="/kindeditor/lang/zh_CN.js"></script>
    <script type="text/javascript">
    var editor;
    KindEditor.ready(function (K) {
    	editor = K.create( 'textarea', {
    		allowImageUpload: false,
    		items: [
    			'fontname', 'fontsize', '|', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline',
    			'removeformat', '|', 'justifyleft', 'justifycenter', 'justifyright',  
    			'insertorderedlist', 'insertunorderedlist', '|', 'emoticons', 'image', 'link'
    		]
    	} );
    });
    </script>
  </head>
  <body>

	<header>
	<h1><%= title %></h1>
	</header>

	<nav>
	<span><a title="主页" href="/">主页</a></span>
	<span><a title="存档" href="/archive">存档</a></span>
	<span><a title="标签" href="/tags">标签</a></span>
	<span><a title="友情链接" href="/links">友情链接</a></span>
	<% if (user) { %>
	  <span><a title="上传" href="/upload">上传</a></span>
	  <span><a title="发表" href="/post">发表</a></span>
	  <span><a title="登出" href="/logout">登出</a></span>
	<% } else { %>
	  <span><a title="登录" href="/login">登录</a></span>
	  <span><a title="注册" href="/reg">注册</a></span>
	<% } %>
		<span>
			<form action="/search" method="GET">
				<input type="text" name="keyword" placeholder="搜点什么吧..." class="search">
			</form>
		</span>
	</nav>

	<article>

	<% if (success) { %>
	  <div><%= success %></div>
	<% } %>
	<% if (error) { %>
	  <div><%= error %> </div>
	<% } %>